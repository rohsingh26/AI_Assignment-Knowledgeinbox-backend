datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

generator client {
  provider = "prisma-client-js"
}

model Item {
  id        Int      @id @default(autoincrement())
  type      String
  title     String?
  content   String
  createdAt DateTime @default(now())
  chunks    Chunk[]
}

model Chunk {
  id        Int      @id @default(autoincrement())
  itemId    Int
  content   String
  embedding Json
  createdAt DateTime @default(now())
  item      Item @relation(fields: [itemId], references: [id], onDelete: Cascade)
}
